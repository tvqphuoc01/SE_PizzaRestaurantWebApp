        // Section 1
        .section-lg
            .container 
                .row 
                    .col-md-8 
                        form.sky-form(id='sky-form' novalidate='novalidate')
                            fieldset 
                                .row 
                                    .col.col-6.m-bottom2
                                        label.label Name 
                                        label.input
                                            i.icon-append.fa.fa-user 
                                            input(type='text' name='name' id='name')
                                    .col.col-6.m-bottom2
                                        label.label E-mail 
                                        label.input
                                            i.icon-append.fa.fa-envelope
                                            input(type='email' name='email' id='email')
                                .m-bottom2
                                    label.label Subject
                                        label.input
                                            i.icon-append.fa.fa-tag 
                                            input(type='text' name='subject' id='subject')
                                .m-bottom2
                                    label.label Message
                                        label.textarea
                                            i.icon-append.fa.fa-comment
                                            textarea(rows='4' name='message' id='message')
                                .m-bottom2
                                    label.label Enter characters below:
                                        label.input.input-captcha
                                            img(src='thumb1.jpg' width='100' height='35' alt='Captcha image')
                                            input(type='text' maxlength='6' name='captcha' id='captcha')
                                .m-bottom2
                                    label.checkbox
                                        input(type='checkbox' name='copy')
                                        i 
                                        span Send a copy to my e-mail address
                            footer 
                                button.button(type= 'submit') Send message
                            .message
                                i.fa.fa-check 
