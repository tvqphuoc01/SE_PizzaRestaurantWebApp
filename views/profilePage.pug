    script.
        function myFunction2() {
                var x = document.getElementById("myInput2");
                if (x.type === "password") {
                  x.type = "text";
                } else {
                  x.type = "password";
                }
        }
        function myFunction() {
                        var x = document.getElementById("search-bar");
                        var y = document.getElementById("nav-list");
                            if (x.style.display === "none") {
                                x.style.display = "block";
                                y.style.display = "none";
                            } else {
                                x.style.display = "none";
                                y.style.display = "flex";
                            }
        }
.container-fluid.row.mainNavBar.fixed-top.w-100.navbar-expand-lg
    //Navbar
    .col-2.d-flex.justify-content-center
        a(href="/")
            img(src="logo.png" alt="Butter logo")
    .col-10.d-flex.justify-content-center
        ul(id="nav-list").nav.align-items-center
            li.nav-item.dropdown <a class="home" href="/"> HOME </a>
            li.nav-item <a class="home" href="/Shop"> SHOP
            li.nav-item.dropdown PAGES 
                        i(class="fa fa-angle-down")
                        div(class="dropdown-content")
                            a(class="dropdown-item" href="/aboutUs") About Us
                            a(class="dropdown-item" href="/service") Service
            li.nav-item.dropdown <a class="menu" href="/menu"> MENU </a>
            li.nav-item 
              a(class="reservation" href="/reservation") RESERVATION
            li.nav-item 
              a(class="Blog" href="/Blog") BLOG
            li.nav-item
              a(class="contact" href="/contact") CONTACT
            li.nav-item
              i(class="fas fa-cart-plus fa-lg")
            li.nav-item
              i(class="fas fa-search fa-lg" onclick="myFunction()")
            if user
              li.nav-item
                a(href="/profilePage")
                  img(src=user.avatar alt="Avatar" class="avatar-nav")
              li.nav-item.dropdown
                a(class="contact" href="/profilePage")= user.userName
                div(class="dropdown-content")
                  a(class="dropdown-item" href="/profilePage") Profile
                  a(class="dropdown-item" href="/logOut") Log Out
            else
              li.nav-item
                a(class="contact" href="/logIn") LOGIN
              li.nav-item
                a(class="contact" href="/signUp") SIGN UP
        div.col-12(id="search-bar")
            i(class="fas fa-search fa-lg" onclick="myFunction()")
            input(type="text", placeholder="Search Here ..... !", )        
.container.bootstrap.snippet
  .row
    .col-sm-10
      h1= user.userName
  .row
    .col-sm-3
      // left col
      .text-center
        img.avatar.img-circle.img-thumbnail(src=user.avatar alt='avatar')
      br
      br
      .panel.panel-default
        .panel-heading Social Media
        .panel-body
          i.fa.fa-facebook.fa-2x
          i.fa.fa-github.fa-2x
          i.fa.fa-twitter.fa-2x
          i.fa.fa-pinterest.fa-2x
          i.fa.fa-google-plus.fa-2x
    // /col-3
    .col-sm-9
      ul.nav.nav-tabs
        li.active
          a(data-toggle='tab' href='#home') Home
      .tab-content
        #home.tab-pane.active
          hr
          form#registrationForm.form(action='/profilePage' method='post' enctype="multipart/form-data")
            .form-group
              .col-xs-6
                label(for='first_name')
                  h4 First name
                if user
                  input#last_name.form-control(type='text' name='firstName' value=user.firstName title='enter your first name if any.')
                else
                  input#last_name.form-control(type='text' name='firstName' placeholder='First name' title='enter your first name if any.')
            .form-group
              .col-xs-6
                label(for='last_name')
                  h4 Last name
                if user
                  input#last_name.form-control(type='text' name='lastName' value=user.lastName title='enter your last name if any.')
                else
                  input#last_name.form-control(type='text' name='lastName' placeholder='Last name' title='enter your last name if any.')
            .form-group
              .col-xs-6
                label(for='phone')
                  h4 Phone
                if user
                  input#last_name.form-control(type='text' name='phone' value=user.phone)
                else
                  input#last_name.form-control(type='text' name='phone' placeholder='Phone')
            .form-group
              .col-xs-6
                label(for='email')
                  h4 Email
                if user
                  input#last_name.form-control(type='text' name='email' value=user.email)
                else
                  input#last_name.form-control(type='text' name='email' placeholder='Email')
            .form-group
              .col-xs-6
                label(for='Location')
                  h4 Location
                if user
                  input#last_name.form-control(type='text' name='address' value=user.address)
                else
                  input#last_name.form-control(type='text' name='address' placeholder='Address')
            .form-group
              .col-xs-6
                label(for='password')
                  h4 Password
                if user
                  input#myInput2.form-control(type='password' name='passWord' value=user.passWord)
                  <input type="checkbox" onclick="myFunction2()"> Show Password 
                else
                  input#last_name.form-control(type='password' name='passWord' placeholder='Password')
            .form-group
              .col-xs-6
                label(for='Avatar')
                  h4 Avatar
                  input(type='file' name='avatar')
            .form-group
              .col-xs-12.row
                br
                button.btn.btn-lg.btn-success.col-3(type='submit')
                  i.glyphicon.glyphicon-ok-sign
                  |  Save
                button.btn.btn-lg.col-3(type='reset')
                  i.glyphicon.glyphicon-repeat
                  |  Reset
                a(href='/logOut'  id='logOut').col-3
                  button.btn.btn-lg.btn-danger(type='button' id='logOut')
                      i.fas.fa-sign-out-alt
                        |  Log Out
